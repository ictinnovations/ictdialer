/**
 * Performs validation on extension
 */
function broadcast_extension_form_validate($form, &$form_state) {
  $extension = $form_state['values'];
  if (!isset($extension['account_id'])) {
    $query = 'SELECT * FROM account WHERE username=:username';
    $result = CoreDB::db_query($query, array(':username'=>$extension['username']));
    if($rec = $result->fetchAssoc()) {
        form_set_error('username', t('Extension name is already taken. Please choose another name.'));
    }
  }

}


/**
 * Inserts a new extension, or updates an existing one.
 *
 * @param $extension
 *   A extension to be saved. If $extension['account_id'] is set, the extension will be updated.
 *   Otherwise, a new extension will be inserted into the database.
 * @return
 *   The saved extension, with its ID set.
 */
function broadcast_extension_form_submit($form, &$form_state) {
  global $user;

  include_once "/usr/ictcore/core/core.php";

  $account = $form_state['values'];
  if (!isset($account['created_by'])) {
    $extension['created_by'] = $user->uid;
  }
  $oAccount = new Account($account['account_id']);
  $oAccount->set('username',   $account['username']);
  $oAccount->set('passwd',     $account['passwd']);
  $oAccount->set('first_name', $account['first_name']);
  $oAccount->set('last_name',  $account['last_name']);
  $oAccount->set('phone',      $account['phone']);
  $oAccount->set('email',      $account['email']);
  $oAccount->set('address',    $account['address']);
  $oAccount->set('active',     $account['active']);
  $result = $oAccount->save();
  if ($result) {
    drupal_set_message(t('Extension updated successfully!'), 'status');
  } else {
    drupal_set_message(t('Unable to create Extension!'), 'error');
  }
  $form_state['redirect'] = 'broadcast/extension/list';
}


/**
 * Loader function for individual extensions.
 */
function broadcast_extension_load($account_id) {
  $sql    = "SELECT * FROM account WHERE account_id = :account_id";
  $result = CoreDB::db_query($sql, array(':account_id' => $account_id));
  if ($extension = $result->fetchAssoc()) {
    return $extension;
  } else {
    drupal_set_message(t('Error loading specified extension!'), 'error');
    return FALSE;
  }
}

/**
 * Deletes a extension, given its unique ID.
 *
 * @param $extension
 *   An array of extension containing the ID of a extension.
 */
function broadcast_extension_delete($extension) {

  include_once "/usr/ictcore/core/core.php";

  $query  = 'SELECT * FROM account';
  $result = CoreDB::db_query($query);
  $count  = $result->rowCount();
  if ($count >= 2){
    $oAccount = new Account($extension['account_id']);
    if ($oAccount->delete()){
      drupal_set_message(t('Extension deleted successfully!'), 'status');
    } else {
      drupal_set_message(t('Unable to delete Extension.'), 'error');
    }
  } else {
    drupal_set_message(t('At least one Extension must have, can\'t delete'), 'error');
  }
  drupal_goto('broadcast/extension/list');
}

/**
 * Loader function for all extensions.
 */
function broadcast_extension_option() {
  global $user;
  $sql = "SELECT account_id, username FROM {account}  
          WHERE created_by = :usr_id";
  $result = CoreDB::db_query($sql, array(':usr_id'=>$user->uid));
  $rows = array();
  while ($extension = $result->fetchAssoc()) {
    $row_id = $extension['account_id'];
    $rows[$row_id] = check_plain($extension['username']);
  }
  if (!isset($rows)) {
    return FALSE;
  }
  return $rows;
}

/**
 * Loader function for all users.
 */
function broadcast_user_option() {
  $sql    = "SELECT usr_id, username FROM usr WHERE usr_id > 0";
  $result = CoreDB::db_query($sql);
  $rows   = array();
  while ($user = $result->fetchAssoc()) {
    $row_id = $user['usr_id'];
    $rows[$row_id] = check_plain($user['username']);
  }
  if (!isset($rows)) {
    return FALSE;
  }
  return $rows;
}
